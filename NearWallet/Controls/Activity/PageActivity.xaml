<local:PageControl x:Class="NearWallet.Controls.Activity.PageActivity"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NearWallet.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="WhiteSmoke" >
        <ScrollViewer x:Name="scroll">
            <Grid Width="500" Margin="0,30,0,0">
                <StackPanel x:Name="sp_actions" Orientation="Vertical" Margin="0,0,0,20">
                    <Button x:Name="bt_allList" Margin="0,10,0,0"  Content="View All" Style="{StaticResource sendingButton}"
                Width="350" Height="40"  Click="Bt_allList_Click" VerticalAlignment="Bottom" />
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</local:PageControl>
